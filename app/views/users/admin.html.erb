<!-- app/views/users/index.html.erb -->
<div class="admin_page">
<header class="header">
<%= link_to '戻る', root_path, class: 'back-btn' %>
<h1>Proof me</h1>
</header>


<hr>


<h2 class="title">ユーザー一覧</h2>


<ul class="user-list">
<% @users.each do |user| %>
<li class="user-row">
<span class="user-name"><%= user.user_id %></span>
<%= button_to '削除',
    user_path(user),
    method: :delete,
    data: { confirm: '削除しますか？' },
    class: 'delete-btn' %>

</li>
<% end %>
</ul>
</div>